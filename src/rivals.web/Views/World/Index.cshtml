@model rivals.app.Models.WorldModel

@{
    ViewData["Title"] = "Index";
}

<h2>Online</h2>

<div>
    <div id="world" data-session-id="@Model.UserSessionID">
        <user-list v-bind:users="users">
        </user-list>
    </div>
</div>

@section Scripts{

    <environment include="Development">
        <script src="~/lib/vue/vue.js"></script>
        <script src="~/lib/aspnet/signalr/dist/browser/signalr.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.17/vue.min.js"
                asp-fallback-src="~/lib/vue/vue.js"
                asp-fallback-test="window.Vue"
                crossorigin="anonymous"
                integrity="sha256-FtWfRI+thWlNz2sB3SJbwKx5PgMyKIVgwHCTwa3biXc=">
        </script>
        <script src="https://unpkg.com/@@aspnet/signalr@1.1.0/dist/browser/signalr.js"
                asp-fallback-src="~/lib/aspnet/signalr/dist/browser/signalr.js"
                asp-fallback-test="window.signalR"
                crossorigin="anonymous"
                integrity="sha384-arDqoUZHdj50mIYqKv5ykvr0yu1WaJbQDpl8SfVv/hhdieJjXVoG/bY6mm7Qyp5x">
        </script>
    </environment>
    <script src="~/js/world.js" asp-append-version="true"></script>
}