@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div id="root">
        <chat-log v-bind:chat-history="chat">
        </chat-log>
        <chat-input></chat-input>
    </div>
</div>

@section Scripts{

    <environment include="Development">
        <script src="~/lib/vue/vue.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.17/vue.min.js"
                asp-fallback-src="~/lib/vue/vue.js"
                asp-fallback-test="window.Vue"
                crossorigin="anonymous"
                integrity="sha256-FtWfRI+thWlNz2sB3SJbwKx5PgMyKIVgwHCTwa3biXc=">
        </script>
    </environment>
    <script src="~/lib/aspnet/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/root.js" asp-append-version="true"></script>
}